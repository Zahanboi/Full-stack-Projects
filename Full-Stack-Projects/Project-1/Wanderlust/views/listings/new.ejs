<% layout("../Layouts/boilerPlate") -%>

<body>
  <div class="container mt-5 mb-4" id="create-listing-container">
    <h2 class="text-center mb-4" id="create-listing-title">Create a New Listing</h2>

    <form action="/listings" method="POST" id="create-listing-form" enctype="multipart/form-data" novalidate  class="shadow p-4 bg-white rounded needs-validation">
      <div class="mb-3">
        <label for="listingTitle" class="form-label">Title</label>
        <input type="text" class="form-control" id="listingTitle" name="listing[title]" placeholder="Add a catchy title" required>
        <div class="valid-feedback">
      Looks good!
    </div>
      </div>

      <div class="mb-3">
        <label for="listingDescription" class="form-label">Description</label>
        <textarea class="form-control" id="listingDescription" name="listing[description]" placeholder="Enter Description" rows="3" required></textarea>
        <div class="valid-feedback">
      Looks good!
    </div>
      </div>

      <div class="mb-3">
        <label for="listingImagefornew" class="form-label">Upload Image (.jpg/.jpeg/.png only)</label>
        <input type="file" class="form-control" id="listingImagefornew" name="listing[image]" accept=".jpg,image/jpeg" required >
        <div class="invalid-feedback" id="imageFeedbackfornew">
          Please upload a valid image.
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="listingPrice" class="form-label">Price</label>
          <input type="number" class="form-control" id="listingPrice" name="listing[price]" placeholder="1200" required>
          <div class="invalid-feedback">
        Please input valid price
      </div>
        </div>
        <div class="col-md-6">
          <label for="listingCountry" class="form-label">Country</label>
          <input type="text" class="form-control" id="listingCountry" name="listing[country]" placeholder="India" required>
           <div class="invalid-feedback">
        Please enter a Country name.
      </div>
        </div>
      </div>

      <div class="mb-4">
        <label for="listingLocation" class="form-label">Location</label>
        <input type="text" class="form-control" id="listingLocation" name="listing[location]" placeholder="Jaipur, Rajasthan" required>
         <div class="invalid-feedback">
        Enter location.
      </div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-danger px-4" id="create-listing-submit">Add</button>
      </div>
    </form>
  </div>
</body>
