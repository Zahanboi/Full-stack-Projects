<% layout("../Layouts/boilerPlate") -%>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
<style>
  /* ------- RESET & BASE ------- */
  * { margin: 0; padding: 0; box-sizing: border-box; }
  body {
    font-family: 'Poppins', sans-serif;
    color: #333;
    overflow: hidden; /* hide scroll while loading */
  }
  a { text-decoration: none; color: inherit; }

  @keyframes fadePage {
  from { opacity: 0; }
  to   { opacity: 1; }
}
  /* ------- HERO & OVERLAY ------- */
  .hero {
    position: relative;
    height: 100vh;
    width: 100vw;
    margin-left: 50%;
    transform: translateX(-50%);
    background: url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1500&q=80')
                center/cover no-repeat;
                 opacity: 0;                     /* start hidden */
  animation: fadePage 1s ease-out forwards 0.3s;
  }
  .hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.4);
  }

  /* ------- CONTENT WRAPPER ------- */
  .hero-content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0 1rem;
  }
  .hero-content h1 {
    font-size: 3rem;
    font-weight: 600;
    color: #FFF;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 8px rgba(0,0,0,0.6);
  }
  .hero-content p {
    font-size: 1.1rem;
    font-weight: 300;
    color: #EEE;
    margin-bottom: 2rem;
  }

  /* ------- EXPLORE BUTTON ------- */
  .btn-explore {
    display: inline-block;
    padding: 0.9rem 2rem;
    font-size: 1rem;
    font-weight: 500;
    color: #FFF;
    background: #FF385C;
    border: none;
    border-radius: 8px;
    box-shadow: 0 4px 12px rgba(255,56,92,0.4);
    transition: background 0.2s, transform 0.2s, box-shadow 0.2s;
  }
  .btn-explore:hover {
    background: #e11d48;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(255,56,92,0.6);
  }

  /* ------- RESPONSIVE ------- */
  @media (max-width: 768px) {
    .hero-content h1 { font-size: 2.4rem; }
    .btn-explore { width: 80%; padding: 0.8rem; }
  }
</style>

<body>
  

  <!-- MAIN HERO -->
  <div class="hero">
    <div class="hero-content">
      <h1>Find Your Next Adventure</h1>
      <p>Discover unique places to stay and things to do around the world.</p>
      <a href="/listings" class="btn-explore">Explore Listings</a>
    </div>
  </div>


</body>
